{% extends "bases.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/article_style.css') }}">
{% endblock %}

{% block main %}

	<div class="container">

		{% for post in posts %}
			<div class="title">
				<h1>
					<a href="{{ path('post_show', {'id' : post.id}) }}">{{ post.title }}</a>
				</h1>
				<h2 class="update">
					<a href="{{ path('post_update', {'id' : post.id}) }}">Modifier le post</a>
				</h2>
				<h2 class="delete">
					<a href="{{ path('delete_post', {'id' : post.id}) }}">Supprimer le post</a>
				</h2>
			</div>

		{% endfor %}


	</div>

	<div>
		<a href="{{ path('post_create') }}">Cr√©er un post</a>
	</div>


{% endblock %}
